<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@+id/frame_shutter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="invisible">
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/menu_picture_count"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/button_howManyPictures"
        android:layout_toLeftOf="@+id/button_howManyPictures"
        android:layout_toStartOf="@+id/button_howManyPictures"
        android:layout_marginRight="5dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/button_plus_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="+1"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/button_plus_ten"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="+10"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button_plus_one"
            android:layout_toStartOf="@+id/button_plus_one"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>

    <Button
        android:id="@+id/button_flash_mode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="#afff"
        android:text="Flash"
        android:textColor="@color/colorPrimary"
        android:layout_above="@id/button_iso"
        android:layout_alignLeft="@id/button_iso"/>

    <RelativeLayout
        android:id="@+id/menu_flash_mode"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/button_flash_mode"
        android:layout_toRightOf="@id/button_flash_mode"
        android:layout_marginLeft="5dp"
        >
        <Button
            android:id="@+id/button_flash_auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="Auto"
            android:textColor="@color/colorPrimary"
            />
        <Button
            android:id="@+id/button_flash_on"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="ON"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/button_flash_auto"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/button_flash_off"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="OFF"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/button_flash_on"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/button_flash_torch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="Torch"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/button_flash_off"
            android:layout_marginLeft="5dp"/>



    </RelativeLayout>

    <Button
        android:id="@+id/button_howManyPictures"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/button_capture"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_capture"
        android:layout_marginTop="5dp"
        android:background="#afff"
        android:text="3"
        android:textColor="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/button_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/button_take_picture"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:background="#0000"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/button_focus_mode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#afff"
        android:text="Focus"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
         />




    <RelativeLayout
        android:id="@+id/menu_focus_mode"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/button_focus_mode"
        android:layout_alignBottom="@id/button_focus_mode"
        android:visibility="invisible">
        <Button
            android:id="@+id/button_focus_mode_auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="Auto"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/button_focus_mode_macro"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="Macro"
            android:textColor="@color/colorPrimary"
            android:layout_alignBottom="@+id/button_focus_mode_auto"
            android:layout_toRightOf="@+id/button_focus_mode_auto"
            android:layout_toEndOf="@+id/button_focus_mode_auto"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/button_focus_mode_inf"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="INF"
            android:textColor="@color/colorPrimary"
            android:layout_alignBottom="@+id/button_focus_mode_macro"
            android:layout_toRightOf="@+id/button_focus_mode_macro"
            android:layout_toEndOf="@+id/button_focus_mode_macro"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>


    <Button
        android:id="@+id/button_scene_mode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#afff"
        android:text="Scene\nMode"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button_focus_mode"
        android:layout_alignLeft="@+id/button_focus_mode"
        android:layout_alignStart="@+id/button_focus_mode"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:background="#afff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"></Spinner>

    <Button
        android:id="@+id/button_iso"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#afff"
        android:text="ISO"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/button_focus_mode"
        android:layout_alignLeft="@+id/button_focus_mode"
        android:layout_alignStart="@+id/button_focus_mode"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/button_zsl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#afff"
        android:text="ZSL\nOFF"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_capture"
        android:layout_alignEnd="@+id/button_capture"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/text_view_central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="#0000"
        android:textSize="320sp"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>




</RelativeLayout>