<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ListView
        android:id="@+id/list_view_main_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/menuBackgroud"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/background_dark"
        android:visibility="invisible"></ListView>
    <ListView
        android:id="@+id/list_view_values_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_view_main_menu"
        android:background="@color/menuBackgroud"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/background_dark"
        android:layout_marginLeft="5dp"
        android:visibility="invisible">
    </ListView>





    <RelativeLayout
        android:id="@+id/menu_zoom"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="visible">


        <Button
            android:id="@+id/button_zoom_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/button_zoom_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#afff"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <SeekBar
            android:id="@+id/seekbar_zoom"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/button_zoom_minus"
            android:layout_toRightOf="@id/button_zoom_minus"
            />

        <TextView
            android:id="@+id/text_view_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TempTextView"
            android:layout_below="@+id/seekbar_zoom"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>



    </RelativeLayout>


    <ListView
        android:id="@+id/list_view_how_many_pictures"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/menuBackgroud"
        android:layout_toLeftOf="@+id/layout_capture_button"
        android:visibility="invisible"
        >

    </ListView>


    <RelativeLayout
        android:id="@+id/layout_capture_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/button_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/button_take_picture"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:background="#0000"
            android:layout_marginRight="5dp"
            android:alpha="0.75"/>

        <TextView
            android:id="@+id/text_view_how_many_pictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/button_capture"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            />



    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_show_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/button_arrow_right"
        android:background="#0000"
        android:layout_marginLeft="-10dp"
        android:alpha="0.75"/>



    <TextView
        android:id="@+id/text_view_central"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="#0000"
        android:textSize="320sp"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>